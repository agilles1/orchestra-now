<h2>Create New Users</h2>

<%if @user.errors.any? %>
    <% @user.errors.full_messages.each do |error| %>
        <p><i><%=error%>!<i></p>
    <% end %>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :email %><br>
    <%= f.text_field :email %><br>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %><br>
    <%= f.submit %>
<% end %>